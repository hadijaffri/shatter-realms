{
  "name": "shatterrealms-game",
  "version": "1.0.0",
  "description": "ShatterRealms - A 3D wave-based dungeon crawler combat game with multiplayer PvP",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "party:dev": "partykit dev",
    "party:deploy": "partykit deploy",
    "lint": "eslint \"api/**/*.js\"",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "check": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "game",
    "three.js",
    "3d",
    "combat",
    "wave-based",
    "multiplayer",
    "pvp"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "partysocket": "^0.0.25",
    "stripe": "^20.2.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "partykit": "^0.0.115",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
